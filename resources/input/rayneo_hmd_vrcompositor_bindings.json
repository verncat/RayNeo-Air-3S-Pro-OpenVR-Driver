{
  "action_manifest_version": 0,
  "alias_info": {},
  "app_key": "openvr.component.vrcompositor",
  "bindings": {
    "/actions/lasermouse": {
      "poses": [
        {
          "output": "/actions/lasermouse/in/pointer",
          "path": "/user/head/pose/raw"
        }
      ],
      "sources": [
        {
          "path": "/user/head/input/trigger",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/lasermouse/in/LeftClick"
            }
          }
        },
        {
          "path": "/user/head/input/grip",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/lasermouse/in/Back"
            }
          }
        },
        {
          "path": "/user/head/input/application_menu",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/lasermouse/in/Home"
            }
          }
        }
      ]
    },
    "/actions/system": {
      "chords": [
        {
          "output": "/actions/system/in/TakeScreenshot",
          "inputs": [
            ["/user/head/input/system", "held"],
            ["/user/head/input/trigger", "click"]
          ]
        }
      ],
      "sources": [
        {
          "path": "/user/head/input/trigger",
          "parameters": { "haptic_amplitude": "0" },
          "mode": "button"
        },
        {
          "path": "/user/head/input/system",
          "mode": "button",
          "inputs": {
            "held": {"output": "/actions/system/in/SystemButtonChord"},
            "click": {"output": "/actions/system/in/ToggleDashboard"}
          },
          "parameters": {"haptic_amplitude": "0"}
        },
        {
          "path": "/user/head/input/application_menu",
          "mode": "button",
          "inputs": {
            "click": {"output": "/actions/system/in/Recenter"}
          },
          "parameters": {"haptic_amplitude": "0"}
        }
      ]
    }
  },
  "category": "steamvr_input",
  "controller_type": "rayneo_hmd",
  "description": "Default SteamVR Dashboard bindings for RayNeo HMD",
  "name": "RayNeo HMD bindings",
  "options": {},
  "simulated_actions": []
}
